<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:appConfig="http://schemas.android.com/apk/res-auto"
    tools:context="pl.edu.agh.pockettrainer.ui.activities.ProgramDetailsFragment">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:id="@+id/program_image"
        android:layout_width="match_parent"
        android:layout_height="500px"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10px"
        android:scaleType="centerCrop"
        appConfig:layout_constraintEnd_toEndOf="parent"
        appConfig:layout_constraintStart_toStartOf="parent"
        appConfig:layout_constraintTop_toTopOf="parent"
        appConfig:srcCompat="@android:color/black" />
    <ImageView
        android:id="@+id/gender_image"
        android:layout_width="64px"
        android:layout_height="64px"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="405px"
        android:layout_marginTop="10px"
        appConfig:srcCompat="@android:color/white"  />

    <TextView
        android:id="@+id/label_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="520px"
        android:text="Program name"
        android:textSize="22dp"
        android:textStyle="bold"
        appConfig:layout_constraintLeft_toLeftOf="parent"
        appConfig:layout_constraintTop_toBottomOf="@+id/program_image" />

    <TextView
        android:id="@+id/label_goals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="580px"
        android:fontFamily="@font/roboto"
        android:text="fitness, health, fat loss" />

    <TextView
        android:id="@+id/label_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="640px"
        android:fontFamily="@font/roboto"
        android:text="" />
    <TextView
        android:id="@+id/label_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="32px"
        android:layout_marginTop="720px"
        android:fontFamily="@font/roboto"
        android:text="" />
</FrameLayout>
