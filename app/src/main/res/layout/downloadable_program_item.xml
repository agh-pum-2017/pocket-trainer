<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:appConfig="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:drawable/dialog_holo_light_frame">

    <ImageView
        android:id="@+id/downloadable_program_item_image"
        android:layout_width="128dp"
        android:layout_height="110dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:scaleType="centerCrop"
        appConfig:layout_constraintStart_toStartOf="parent"
        appConfig:layout_constraintTop_toBottomOf="@+id/downloadable_program_item_checkbox"
        appConfig:srcCompat="@android:color/black" />

    <TextView
        android:id="@+id/downloadable_program_item_title"
        android:layout_width="wrap_content"
        android:layout_height="26dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/roboto_bold"
        android:text="28 days 10minutes a day"
        android:textSize="22sp"
        appConfig:layout_constraintBottom_toTopOf="@+id/downloadable_program_item_description"
        appConfig:layout_constraintStart_toEndOf="@+id/downloadable_program_item_checkbox"
        appConfig:layout_constraintTop_toTopOf="parent"
        appConfig:layout_constraintVertical_bias="0.6" />

    <TextView
        android:id="@+id/downloadable_program_item_goals"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/roboto"
        android:text="build mass, strength, fitness"
        android:textSize="14sp"
        appConfig:layout_constraintBottom_toBottomOf="parent"
        appConfig:layout_constraintEnd_toEndOf="parent"
        appConfig:layout_constraintHorizontal_bias="0.0"
        appConfig:layout_constraintStart_toStartOf="@+id/downloadable_program_item_image"
        appConfig:layout_constraintTop_toBottomOf="@+id/downloadable_program_item_image"
        appConfig:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/downloadable_program_item_description"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/roboto"
        android:text="5 simple exercises that will transform your body in just four weeks"
        android:textSize="18sp"
        appConfig:layout_constraintBottom_toBottomOf="@+id/downloadable_program_item_image"
        appConfig:layout_constraintEnd_toEndOf="parent"
        appConfig:layout_constraintStart_toEndOf="@+id/downloadable_program_item_image"
        appConfig:layout_constraintTop_toTopOf="@+id/downloadable_program_item_image" />

    <CheckBox
        android:id="@+id/downloadable_program_item_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:buttonTint="#00A6FF"
        appConfig:layout_constraintStart_toStartOf="parent"
        appConfig:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
