<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:appConfig="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ProgressBar
        android:id="@+id/today_new_progressBar"
        style="?android:progressBarStyleHorizontal"
        android:layout_width="279dp"
        android:layout_height="261dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:indeterminate="false"
        android:max="100"
        android:progress="100"
        android:progressDrawable="@drawable/circle_full"
        appConfig:layout_constraintBottom_toBottomOf="parent"
        appConfig:layout_constraintEnd_toEndOf="parent"
        appConfig:layout_constraintStart_toStartOf="parent"
        appConfig:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/today_new_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="Start"
        appConfig:layout_constraintBottom_toBottomOf="@+id/today_new_progressBar"
        appConfig:layout_constraintEnd_toEndOf="@+id/today_new_progressBar"
        appConfig:layout_constraintStart_toStartOf="@+id/today_new_progressBar"
        appConfig:layout_constraintTop_toTopOf="@+id/today_new_progressBar" />

</android.support.constraint.ConstraintLayout>