<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:appConfig="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/today_belated_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="80dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:textSize="16sp"
        appConfig:layout_constraintBottom_toBottomOf="@+id/today_belated_progressBar"
        appConfig:layout_constraintEnd_toEndOf="parent"
        appConfig:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/today_belated_button"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="92dp"
        android:text="Continue"
        appConfig:layout_constraintBottom_toTopOf="@+id/today_belated_textView"
        appConfig:layout_constraintEnd_toEndOf="@+id/today_belated_progressBar"
        appConfig:layout_constraintHorizontal_bias="0.497"
        appConfig:layout_constraintStart_toStartOf="@+id/today_belated_progressBar"
        appConfig:layout_constraintTop_toTopOf="@+id/today_belated_progressBar"
        appConfig:layout_constraintVertical_bias="0.2" />

    <ProgressBar
        style="?android:progressBarStyleHorizontal"
        android:layout_width="279dp"
        android:layout_height="261dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:indeterminate="false"
        android:max="100"
        android:progress="100"
        android:progressDrawable="@drawable/circle_full"
        appConfig:layout_constraintBottom_toBottomOf="parent"
        appConfig:layout_constraintEnd_toEndOf="parent"
        appConfig:layout_constraintStart_toStartOf="parent"
        appConfig:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/today_belated_progressBar"
        style="?android:progressBarStyleHorizontal"
        android:layout_width="279dp"
        android:layout_height="261dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:indeterminate="false"
        android:max="100"
        android:progressDrawable="@drawable/circle_red"
        appConfig:layout_constraintBottom_toBottomOf="parent"
        appConfig:layout_constraintEnd_toEndOf="parent"
        appConfig:layout_constraintHorizontal_bias="0.504"
        appConfig:layout_constraintLeft_toLeftOf="parent"
        appConfig:layout_constraintRight_toRightOf="parent"
        appConfig:layout_constraintStart_toStartOf="parent"
        appConfig:layout_constraintTop_toTopOf="parent"
        appConfig:layout_constraintVertical_bias="0.538" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/roboto_bold"
        android:text="Behind schedule!"
        android:textSize="18sp"
        appConfig:layout_constraintBottom_toBottomOf="parent"
        appConfig:layout_constraintHorizontal_bias="0.501"
        appConfig:layout_constraintLeft_toLeftOf="parent"
        appConfig:layout_constraintRight_toRightOf="parent"
        appConfig:layout_constraintTop_toTopOf="parent"
        appConfig:layout_constraintVertical_bias="0.401" />

</android.support.constraint.ConstraintLayout>