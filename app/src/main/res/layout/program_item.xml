<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:appConfig="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <ImageView
        android:id="@+id/program_image"
        android:layout_width="match_parent"
        android:layout_height="500px"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:scaleType="centerCrop"
        appConfig:layout_constraintEnd_toEndOf="parent"
        appConfig:layout_constraintStart_toStartOf="parent"
        appConfig:layout_constraintTop_toTopOf="parent"
        appConfig:srcCompat="@android:color/black" />

    <TextView
        android:id="@+id/label_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/roboto"
        android:text="28 days 10 minutes a day"
        android:textSize="22sp"
        appConfig:layout_constraintLeft_toLeftOf="parent"
        appConfig:layout_constraintTop_toBottomOf="@+id/program_image" />

    <TextView
        android:id="@+id/label_goals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/roboto"
        android:text="fitness, health, fat loss"
        appConfig:layout_constraintLeft_toLeftOf="parent"
        appConfig:layout_constraintStart_toStartOf="parent"
        appConfig:layout_constraintTop_toBottomOf="@+id/label_title" />

    <Button
        android:id="@+id/btnShow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="show"
        appConfig:layout_constraintBottom_toBottomOf="parent"
        appConfig:layout_constraintStart_toStartOf="parent"
        appConfig:layout_constraintTop_toBottomOf="@+id/label_goals"
        appConfig:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btnEnroll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="Enroll"
        appConfig:layout_constraintBottom_toBottomOf="parent"
        appConfig:layout_constraintStart_toEndOf="@+id/btnShow"
        appConfig:layout_constraintTop_toBottomOf="@+id/label_goals"
        appConfig:layout_constraintVertical_bias="0.0" />

</android.support.constraint.ConstraintLayout>
